{{ header }}{{ column_left }}

<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-express-pay" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>{{ heading_title }}</h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        {% if error_warning %}
            <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dimdiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" name="form-express-pay" id="form-express-pay" class="form-horizontal">

                    <!-- ТОКЕН -->
                    <div class="form-group required">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_token "><span data-toggle="tooltip" title="{{ tokenTooltip }}">{{ tokenLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_token" value="{{ payment_card_expresspay_token }}" placeholder="{{ tokenLabel }}" id="payment_card_expresspay_token" class="form-control" />
                        </div>
                    </div>
                    <!-- Номер услуги -->
                    <div class="form-group required">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_service_id"><span data-toggle="tooltip" title="{{ serviceIdTooltip }}">{{ serviceIdLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_service_id" value="{{ payment_card_expresspay_service_id }}" placeholder="{{ serviceIdLabel }}" id="payment_card_expresspay_service_id" class="form-control" />
                        </div>
                    </div>
                    <!-- Адрес для уведомлений -->
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_url_notification"><span data-toggle="tooltip" title="{{ urlForNotificationTooltip }}">{{ urlForNotificationLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_url_notification" value="{{ payment_card_expresspay_url_notification }}" readonly placeholder="{{ urlForNotificationLabel }}" id="payment_card_expresspay_url_notification" class="form-control" />
                        </div>
                    </div>
                    <!-- Секретное слово -->
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_secret_word"><span data-toggle="tooltip" title="{{ secretWordTooltip }}">{{ secretWordLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_secret_word" value="{{ payment_card_expresspay_secret_word }}" placeholder="{{ secretWordLabel }}" id="payment_card_expresspay_secret_word" class="form-control" />
                        </div>
                    </div>
                    <!-- Использовать цифровую подпись для уведомлений -->
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_is_use_signature_for_notification">{{ useSignatureForNotificationLabel }}</label>
                        <div class="col-md-10 col-lg-6">
                            <input type='checkbox' name='payment_card_expresspay_is_use_signature_for_notification'  {{ payment_card_expresspay_is_use_signature_for_notification is defined and payment_card_expresspay_is_use_signature_for_notification == 1 ? 'checked="checked"' : '' }} />
                        </div>
                    </div>
                    <!-- Секретное слово для уведомлений -->
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_secret_word_for_notification"><span data-toggle="tooltip" title="{{ secretWordNotificationTooltip }}">{{ secretWordNotificationLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_secret_word_for_notification" value="{{ payment_card_expresspay_secret_word_for_notification }}" placeholder="{{ secretWordNotificationLabel }}" id="payment_card_expresspay_secret_word_for_notification" class="form-control" />
                        </div>
                    </div>
                    <!-- Информация о заказе -->
                    <div class="form-group" required>
                        <label class="col-md-2 control-label" for="payment_card_expresspay_info"><span data-toggle="tooltip" title="{{ infoTooltip }}">{{ infoLabel }}</span></label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_info" value="{{ payment_card_expresspay_info }}" placeholder="{{ infoLabel }}" id="payment_card_expresspay_info" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="payment_card_expresspay_message_success">{{ messageSuccessLabel }}</label>
                        <div class="col-md-10 col-lg-6">
                            <input type='text' name='payment_card_expresspay_message_success' value='{{ payment_card_expresspay_message_success }}' class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label" for="input-status">{{ entry_status  }}</label>
                        <div class="col-md-10 col-lg-6">
                            <select name="payment_card_expresspay_status" id="input-status" class="form-control">
                                {% if payment_card_expresspay_status %}
                                    <option value="1" selected="selected">{{ text_enabled }}</option>
                                    <option value="0">{{ text_disabled }}</option>
                                {% else %}
                                    <option value="1">{{ text_enabled }}</option>
                                    <option value="0" selected="selected">{{ text_disabled }}</option>
                                {% endif %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="input-sort-order">{{ entrySortOrder }}</label>
                        <div class="col-md-10 col-lg-6">
                            <input type="text" name="payment_card_expresspay_sort_order" value="{{ payment_card_expresspay_sort_order }}" placeholder="{{ entrySortOrder }}" id="input-sort-order" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_card_expresspay_processed_status_id">{{ processed_order_status }}</label>
                        <div class="col-sm-10  col-lg-6">
                            <select name="payment_card_expresspay_processed_status_id" id="payment_card_expresspay_processed_status_id" class="form-control">

                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_card_expresspay_processed_status_id %}

                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>

                                    {% else %}

                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>

                                    {% endif %}
                                {% endfor %}

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_card_expresspay_fail_status_id">{{ fail_order_status }}</label>
                        <div class="col-sm-10  col-lg-6">
                            <select name="payment_card_expresspay_fail_status_id" id="payment_card_expresspay_fail_status_id" class="form-control">

                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_card_expresspay_fail_status_id %}

                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>

                                    {% else %}

                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>

                                    {% endif %}
                                {% endfor %}

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="payment_card_expresspay_success_status_id">{{ success_order_status }}</label>
                        <div class="col-sm-10  col-lg-6">
                            <select name="payment_card_expresspay_success_status_id" id="payment_card_expresspay_success_status_id" class="form-control">

                                {% for order_status in order_statuses %}
                                    {% if order_status.order_status_id == payment_card_expresspay_success_status_id %}

                                        <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>

                                    {% else %}

                                        <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>

                                    {% endif %}
                                {% endfor %}

                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}